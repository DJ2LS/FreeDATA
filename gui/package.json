{
  "name": "FreeDATA",
  "version": "0.4.1-alpha",
  "description": "FreeDATA ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DJ2LS/FreeDATA.git"
  },
  "keywords": [
    "TNC",
    "GUI",
    "FreeDATA",
    "codec2"
  ],
  "author": "DJ2LS",
  "license": "LGPL-2.1",
  "bugs": {
    "url": "https://github.com/DJ2LS/FreeDATA/issues"
  },
  "homepage": "https://freedata.app",
  "dependencies": {
    "blob-util": "^2.0.2",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.3",
    "bootswatch": "^5.1.3",
    "chart.js": "^3.8.0",
    "chartjs-plugin-annotation": "^1.4.0",
    "electron-log": "^4.4.7",
    "electron-updater": "^5.0.1",
    "emoji-picker-element": "^1.11.3",
    "emoji-picker-element-data": "^1.3.0",
    "mime": "^3.0.0",
    "pouchdb": "^7.3.0",
    "pouchdb-find": "^7.3.0",
    "qth-locator": "^2.1.0",
    "utf8": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3"
  },
  "build": {
    "productName": "FreeDATA",
    "appId": "app.freedata",
    "npmRebuild" : "false",
    "directories": {
      "buildResources": "src/img",
      "output": "dist"
    },
    "dmg": {
      "icon": "src/img/icon.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "src/img/icon.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "src/img/icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "extraResources": [
      "./tnc/**"
    ]
  }
}

